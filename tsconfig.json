{
    "include": [
        "./src",
    ],
    "exclude": [
        "**/node_modules/**",
    ],
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "baseUrl": "./src/",
        "rootDir": "./src/",
        "outDir": "./lib/",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES5",
            "ES6",
            "ESNext",
            "ES2020",
        ],
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
    }
}